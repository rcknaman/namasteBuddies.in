<body>

    <div class="loader-wrapper">

        <div class="loader">
          <span></span>
          <span></span>
          <span></span>
          <h2><i class="fas fa-praying-hands faa-falling faa-reverse"></i></h2>
      </div></div>

    <div id="logo"><img src="<%= assetPath('images/finalgif.gif') %>" alt=""></div>
    <div id="form-box">

        <form action="/users/create-session" method="post">
            <div>
                <p>email</p>
                <input type="email" name="email" required class="form-control">
            </div>
            <div>
                <p>password</p>
                <input type="password" name="password" required class="form-control">
            </div>
            <p id="forgot-password" class="external-links"><a href="/users/forgot-password/enter-mail">forgot password</a></p>
            <p id="google-signin" class="external-links"><a href="/users/auth/google">Signin with Google</a></p>
            <p id="forgot-password" class="external-links"><a href="/users/signup">signup</a></p>
            <button type="submit">login</button>
        </form>


    </div>
